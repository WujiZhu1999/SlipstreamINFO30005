extends ../navbar

block content
     div.main
        par #{article.body}
        h2 Comments
        par
            each comment in article.comments
                ul
                    li
                        a(href = '/forum/' + article.articleNum + comment.commentNum) #{comment.commentBody}
        
        par
        if article.author == userName
            form(action=("/forum/" + article.articleNum + "/edit") method="GET")
                input(type="submit" value="Change Article")

         
        