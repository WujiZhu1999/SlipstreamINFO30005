extends ../navbar

block content


        
        if article.author == userName
            a(href= "/forum/" + article.articleNum + "/edit" style="float:right;").button Edit Article
            form(action=("/forum/" + article.articleNum + "/delete") method="POST")
                input(type="submit" value="Delete Article" style="float:right; font-size: 16px").button

        
        h1 #{article.title}

                
        a(href = "/users/" + article.author) Author: #{article.author}

        par(style= "margin: 30px 0 30px ; display: inline-block;" ) #{article.body}
        
    
        
        form(action=("/forum/" + article.articleNum) method="POST" class="createArticle")
            h2 Comments
            input(type="text" name="commentBody" required)
            input(type="submit" value="Post" style="font-size: 16px").button
       
        div.table
            each comment in article.comments
                ul
                    li
                        div.comment #{comment.commentBody}
                        if (comment.author != "anonymous")
                            a(href = "/users/" + comment.commentAuthor) From: #{comment.commentAuthor}

                        if (comment.commentAuthor == userName)
                            a(href= '/forum/' + article.articleNum + "/" + comment.commentNumber + "/edit") <button type="button">Edit Comment</button></a>
                            form(action=("/forum/" + article.articleNum  + "/" + comment.commentNumber + "/delete") method="POST")
                                input(type="submit" value="Delete Comment")
            
        par
        if article.author == userName
            a(href= "/forum/" + article.articleNum + "/edit") <button type="button">Edit Article</button></a>
         
        
