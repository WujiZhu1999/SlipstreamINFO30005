extends default
block styles
	link(rel='stylesheet',href='/css/login.css')
block content
	//this is log in page
	div(class="container" id ="container")
		//form to sign up - if user have account alr
		div(class="form sign_up")
			form(action="/login/register" method="POST" id = "sign_up_form")
				h1 Create Account
				input(type="text" placeholder="UserName" name = "userName" required)
				input(type="text" placeholder="NickName" name = "name" required)
				input(type="password" placeholder="Password" name = "password" required)
				button(onclick="document.getElementById('sign_up_form').submit()") Sign up
		//sign in for - for new users
		div(class="form sign_in")
			form(action="/login" method="POST" id="sign_in_form")
				h1 Sign in
				input(type="text" placeholder="UserName" name="userName" required)
				input(type="password" placeholder="Password" name="password" required)
				button(onclick="document.getElementById('sign_in_form').submit()") Sign in
		//animaltion that matching each form
		div(class="switch")
			div(class="switching")
				div(class="op ol")
					h1 Welcome Back!
					p To continue your journey on Slipstream login with your personal account 
					button(class="biu" id="signIn") Sign In
				div(class="op or")
					h1 Hi, there!
					p register your personal account and start journey with Slipstream
					button(class="biu" id="signUp") Sign Up
		script.
			const signUpButton = document.getElementById('signUp');
			const signInButton = document.getElementById('signIn');
			const container = document.getElementById('container');
			signUpButton.addEventListener('click', () => {
				container.classList.add("rpa");
			});
			signInButton.addEventListener('click', () => {
				container.classList.remove("rpa");
			});