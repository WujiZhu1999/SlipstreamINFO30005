extends ../navbar

block content
    div.main
    h1 #{user.name} aka #{user.userName}

    p STREAK = #{user.data.streak}

    p STATISTICS
    ul
        li total distance rode = #{user.data.totalDistance}
        li total energy saved = #{user.data.energySaved}
        li total carbon saved = #{user.data.carbonSaved}

    if ((userName != user.userName))
        form(action= ("/friends/" + user.userName) method="POST")
            input(type="text" name="receiver", value = user.userName)
            input(type="submit" value="Send Friend Request")
        



       
